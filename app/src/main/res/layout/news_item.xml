<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground" >

    <ImageView
        android:id="@+id/iv_news_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@drawable/ic_action_name"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Title"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignTop="@+id/iv_news_image"
        android:layout_toRightOf="@+id/iv_news_image"
        android:layout_toEndOf="@+id/iv_news_image"
        android:layout_marginLeft="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Author"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_title"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignStart="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Date"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="6dp"
        android:layout_alignLeft="@+id/tv_author"
        android:layout_alignStart="@+id/tv_author"
        android:layout_below="@+id/tv_author" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Description"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/iv_news_image"
        android:layout_alignStart="@+id/iv_news_image"
        android:layout_below="@+id/iv_news_image"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"/>

</RelativeLayout>